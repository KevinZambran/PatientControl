                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF2F2358"/>
                    <Setter Property="Cursor" Value="Hand"/>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FE6584"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Height="32" Width="220" CornerRadius= "20" Background="{TemplateBinding Background}">
